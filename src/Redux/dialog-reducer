const ADD_DIALOG_POST = "ADD-DIALOG-POST";
const UPDATE_DIALOG_POST = "UPDATE-DIALOG-POST";

const dialogReducer = (state, action) => {
  switch (action.type) {
    case ADD_DIALOG_POST:
      let body = newMessageText;
      newMessageText = "";
      messages.push({ message: body });
      return state;
    case UPDATE_DIALOG_POST:
      newMessageText = action.body;
      return state;
    default:
      return state;
  }
};

const sendPostActionCreator = () => {
  return {
    type: ADD_DIALOG_POST,
  };
};

const addDialogPostActionCreator = (body) => {
  return {
    type: UPDATE_DIALOG_POST,
    body,
  };
};

export default {
  sendPostActionCreator,
  addDialogPostActionCreator,
  dialogReducer,
};
